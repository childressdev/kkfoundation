{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#79E44B",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#408024",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#D9FED0",
          "name": "Tertiary",
          "slug": "tertiary"
        },
        {
          "color": "#333",
          "name": "Dark Gray",
          "slug": "dark-gray"
        },
        {
          "color": "#d9d9d9",
          "name": "Light Gray",
          "slug": "light-gray"
        },
        {
          "color": "#ffffff",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "#000000",
          "name": "Black",
          "slug": "black"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(to right, rgba(0, 0, 0, 0.57) 0%, rgba(0, 0, 0, 0.2) 100%)",
          "name": "Dark to Light",
          "slug": "dark-to-light"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Manrope\", sans-serif",
          "name": "Main Font",
          "slug": "main-font",
          "fontFace": [
            {
              "fontFamily": "Manrope",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/manrope/manrope-v15-latin-regular.woff2"
              ]
            },
            {
              "fontFamily": "Manrope",
              "fontStyle": "normal",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/manrope/manrope-v15-latin-600.woff2"
              ]
            },
            {
              "fontFamily": "Manrope",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/manrope/manrope-v15-latin-700.woff2"
              ]
            },
            {
              "fontFamily": "Manrope",
              "fontStyle": "normal",
              "fontWeight": "800",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/manrope/manrope-v15-latin-800.woff2"
              ]
            }
          ]
        },
        {
          "fontFamily": "\"Poppins\", sans-serif",
          "name": "Alt Font",
          "slug": "alt-font",
          "fontFace": [
            {
              "fontFamily": "Poppins",
              "fontStyle": "normal",
              "fontWeight": "400",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/poppins/poppins-v22-latin-regular.woff2"
              ]
            },
            {
              "fontFamily": "Poppins",
              "fontStyle": "normal",
              "fontWeight": "600",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/poppins/poppins-v22-latin-600.woff2"
              ]
            },
            {
              "fontFamily": "Poppins",
              "fontStyle": "normal",
              "fontWeight": "700",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/poppins/poppins-v22-latin-700.woff2"
              ]
            },
            {
              "fontFamily": "Poppins",
              "fontStyle": "normal",
              "fontWeight": "800",
              "fontDisplay": "swap",
              "src": [
                "file:./assets/fonts/poppins/poppins-v22-latin-800.woff2"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "size": "0.875rem",
          "name": "Extra Small",
          "slug": "kkf-extra-small"
        },
        {
          "size": "1rem",
          "name": "Small",
          "slug": "kkf-small"
        },
        {
          "size": "1.125rem",
          "name": "Normal",
          "slug": "kkf-normal"
        },
        {
          "size": "1.375rem",
          "name": "Normal Plus",
          "slug": "kkf-normal-plus"
        },
        {
          "size": "clamp(1.63rem, 1.92vw + 0.93rem, 2.13rem)",
          "name": "Medium",
          "slug": "kkf-medium"
        },
        {
          "size": "clamp(2.25rem, 1.92vw + 1.56rem, 2.75rem)",
          "name": "Large",
          "slug": "kkf-large"
        },
        {
          "size": "clamp(2.88rem, 1.92vw + 2.18rem, 3.38rem)",
          "name": "Extra Large",
          "slug": "kkf-extra-large"
        },
        {
          "size": "clamp(3.5rem,3.37vw + 2.29rem,4.38rem)",
          "name": "huge",
          "slug": "kkf-huge"
        }
      ],
      "lineHeight": true,
      "customFontSize": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1400px",
      "wideSize": "null"
    },
    "shadow": {
      "presets": [
        {
          "name": "Natural",
          "slug": "natural",
          "shadow": "0px 3px 10px rgba(0,0,0,.25)"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontSize": "var(--wp--preset--font-size--kkf-normal)",
      "fontFamily": "var(--wp--preset--font-family--main-font)"
    },
    "color": {
      "text": "var(--wp--preset--color--dark-gray)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "30px"
        },
        "spacing": {
          "padding": {
            "top": "14px",
            "right": "32px",
            "bottom": "14px",
            "left": "32px"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alt-font)",
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--kkf-medium)",
          "textDecoration": "none",
          "textAlign": "center",
          "textTransform": "uppercase"
        },
        "color": {
          "text": "var(--wp--preset--color--black)",
          "background": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--white)",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "color": {
            "text": "var(--wp--preset--color--white)",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alt-font)",
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--kkf-extra-large)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alt-font)",
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--kkf-large)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alt-font)",
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--kkf-medium)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--alt-font)",
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--kkf-normal-plus)"
        }
      },
      "link": {
        "color": {
          "text": "inherit"
        },
        "typography": {
          "textDecoration": "none",
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    }
  }
}