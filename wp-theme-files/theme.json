{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#e8b440",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#c0840c",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#e6e6e6",
          "name": "Tertiary",
          "slug": "tertiary"
        },
        {
          "color": "#9d9d9d",
          "name": "Quaternary",
          "slug": "quaternary"
        },
        {
          "color": "#707070",
          "name": "Quinary",
          "slug": "quinary"
        },
        {
          "color": "#ffffff",
          "name": "White",
          "slug": "white"
        },
        {
          "color": "#000000",
          "name": "Black",
          "slug": "black"
        }
      ],
      "gradients": [
        {
          "gradient": "linear-gradient(to right, rgba(0, 0, 0, 0.57) 0%, rgba(0, 0, 0, 0.2) 100%)",
          "name": "Dark to Light",
          "slug": "dark-to-light"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Inter\", \"Trebuchet MS\", \"Arial\", sans-serif",
          "name": "Main Font",
          "slug": "main-font"
        },
        {
          "fontFamily": "\"alverata\", \"Georgia\", serif",
          "name": "Serif Font",
          "slug": "serif-font"
        }
      ],
      "fontSizes": [
        {
          "size": "14px",
          "name": "Extra Small",
          "slug": "extra-small"
        },
        {
          "size": "16px",
          "name": "Small",
          "slug": "small"
        },
        {
          "size": "18px",
          "name": "Normal",
          "slug": "normal"
        },
        {
          "size": "22px",
          "name": "Medium",
          "slug": "medium"
        },
        {
          "size": "40px",
          "name": "Large",
          "slug": "large"
        },
        {
          "size": "54px",
          "name": "Extra Large",
          "slug": "extra-large"
        },
        {
          "size": "60px",
          "name": "huge",
          "slug": "huge"
        }
      ],
      "lineHeight": true,
      "customFontSize": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "layout": {
      "contentSize": "1400px",
      "wideSize": "null"
    },
    "shadow": {
      "presets": [
        {
          "name": "Natural",
          "slug": "natural",
          "shadow": "0px 3px 10px rgba(0,0,0,.25)"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontSize": "var(--wp--preset--font-size--normal)",
      "fontFamily": "var(--wp--preset--font-family--main-font)"
    },
    "color": {
      "text": "var(--wp--preset--color--black)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "4px"
        },
        "shadow": "0px 7px 30px rgba(192, 132, 12, .5)",
        "spacing": {
          "margin": {
            "top": "25px"
          },
          "padding": {
            "top": "14px",
            "right": "32px",
            "bottom": "14px",
            "left": "32px"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-font)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--medium)",
          "textDecoration": "none"
        },
        "color": {
          "text": "var(--wp--preset--color--black)",
          "background": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "#000000",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "color": {
            "text": "#000000",
            "background": "var(--wp--preset--color--secondary)"
          },
          "typography": {
            "textDecoration": "none"
          }
        },
        "css": "display: inline-block; text-align: center;"
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-font)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--extra-large)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-font)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-font)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-font)",
          "fontWeight": "700",
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "link": {
        "color": {
          "text": "inherit"
        },
        "typography": {
          "textDecoration": "none",
          "fontWeight": "700"
        },
        ":hover": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        },
        ":focus": {
          "color": {
            "text": "inherit"
          },
          "typography": {
            "textDecoration": "underline"
          }
        }
      }
    }
  }
}